<div class="container p-4">
  <div class="row">
      <div class="col-md-4  mx-auto">
          <div class="card">
              <div class="card-body">
                  <form method="post">
                      <h3 class="mb-3">Add link</h3>
                      <div class="form-group">
                          <input type="text" class="form-control" name="title" placeholder="Title" autofocus required>
                      </div>
                      <div class="form-group my-2">
                          <input type="url" name="url" class="form-control" placeholder="URL : https://exemple.xyz" required>
                      </div>
                      <div class="form-group">
                          <textarea name="description" rows="2" class="form-control" placeholder="Description" required></textarea>
                      </div>
                      <div class="form-group mt-3">
                          <a href="/links" class="btn btn-secondary w-full">
                            Cancel
                          </a>
                          <button class="btn btn-success w-full">
                            Save
                          </button>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>  
</div>